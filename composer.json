{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "zendframework/zend-diactoros": "^2.1",
        "zendframework/zend-httphandlerrunner": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/Framework",
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "scripts": {
